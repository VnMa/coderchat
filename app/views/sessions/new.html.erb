<h1> Log in </h1>

<%= form_tag sessions_path, class: 'form-group' do %>
<%= label_tag :email %>
<%= text_field_tag :email, nil, placeholder: 'Please enter your email ...', class: 'form-control' %>
<%= label_tag :password %>
<%= password_field_tag :password, nil, class: 'form-control'  %>
<hr/>
<%= submit_tag "Log in" %>
<% end %>